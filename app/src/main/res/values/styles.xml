<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Username">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/searchResultUsername</item>
    </style>

    <style name="Name">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/searchResultName</item>
    </style>

</resources>
